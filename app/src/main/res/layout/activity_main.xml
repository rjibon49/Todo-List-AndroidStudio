<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3498DB"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/openImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/todolist"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        />

    <TextView
        android:id="@+id/openText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SR Todo List"
        android:layout_gravity="center"
        android:textSize="38sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D M Shanto Islam 191015138"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="28sp"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textidr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Md. Raihan hossain Jibon 191015138"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>